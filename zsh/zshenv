#!/usr/bin/env zsh

# XDG
export XDG_CONFIG_HOME="$HOME/.config"
export XDG_DATA_HOME="$XDG_CONFIG_HOME/local/share"
export XDG_CACHE_HOME="$XDG_CONFIG_HOME/cache"

# editor
export PATH="$PATH:/opt/nvim-linux-x86_64/bin"
export EDITOR="nvim"
export VISUAL="nvim"

# zsh
export ZDOTDIR="$XDG_CONFIG_HOME/zsh"
export HISTFILE="$ZDOTDIR/.zhistory"
export HISTSIZE=10000 
export SAVEHIST=10000

# lsmu development
export HOMEPATH="/home/simas/Documents/LSMU"
export ENVIRONMENT="Development"

# git
export GIT_CONFIG_GLOBAL="/home/simas/.config/git/.gitconfig"

# python shit
export PATH="$PATH:/home/simas/.local/bin"

# rider and other c# stuff
export PATH="$PATH:/opt/JetBrains Rider-2024.3.5/bin"
export NUGET_PACKAGES="$HOME/.config/nuget"
export DOTNET_CLI_HOME="$HOME/.config/dotnet"

# docker
export DOCKER_CONFIG="$HOME/.config/docker"

# node
export NVM_DIR="$HOME/.config/nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
