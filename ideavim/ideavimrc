let mapleader = " "
let maplocalleader = " "

set number
set relativenumber
set mouse=a
set showmode=false
set clipboard=unnamedplus
set breakindent
set undofile
set ignorecase
set smartcase
set signcolumn=yes
set updatetime=250
set timeoutlen=300
set splitbelow
set list
set listchars=tab:»\ ,trail:·,nbsp:␣
set inccommand=split
set cursorline
set scrolloff=8
set showcmd
set visualbell
set highlightedyank
set which-key
set wrap

nnoremap Y y$
nnoremap <C-d> <C-d>zz
nnoremap <C-u> <C-u>zz

noremap N Nzz
noremap n nzz
noremap j k
noremap k j

map gcc <Action>(CommentByLineComment)
map grn <Action>(RenameElement)
map <leader>fb <Action>(ReformatCode)
map <leader>sar <Action>(Replace)
map <leader><space> <Action>(SearchEverywhere)
map <leader>sf <Action>(SearchEverywhere)
